{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react",
    "prettier/react"
  ],
  "plugins": [
    "babel",
    "prettier"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__COVERAGE__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "semi" : [2, "never"],
    "max-len": [2, 120, 2],
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 1,
    "jsx-quotes": ["error", "prefer-single"],
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "es6",
      "semi": false
    }]
  }
}
